<main class='text-center multiple'>
  <DummyHeader />

  <div class='content multiple'>
    {{#each this.menus as |menu|}}
      <a
        class='hamburger {{if menu.open 'burger-hidden'}} {{menu.color}}'
        role='button'
        {{on 'click' (toggle 'open' menu)}}
      >
        <FaIcon @icon='bars' aria-hidden='true' />
      </a>
    {{/each}}

    <img
      src='images/Gene_Belcher.png'
      width='150'
      ondragstart='return false;'
      alt='Gene Blecher'
    />
    <p>
      <i>
        "This is me now!"
      </i>
    </p>
  </div>
</main>

{{#each this.menus as |m|}}
  <BurgerMenu @translucentOverlay={{false}} @dismissOnClick={{false}} @dismissOnEsc={{true}} @gesturesEnabled={{true}} @classNames={{array 'multiple' m.color}} @position={{m.position}} @animation={{m.animation}} @open={{m.open}} @width={{250}} as |burger|>
    <burger.menu @itemTagName="li" @dismissOnItemClick={{true}} as |menu|>
      <a
        class='close {{burger.state.position}}'
        role='button'
        {{on "click" burger.state.closeMenu}}
      >
        <FaIcon @icon='times' />
      </a>
      <h2>
        {{titleize m.color}} Menu
      </h2>

      <DummyMenu @menu={{menu}} />
    </burger.menu>
  </BurgerMenu>
{{/each}}